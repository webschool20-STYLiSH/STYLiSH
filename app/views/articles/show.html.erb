<h2>コーディネート</h2>
<p><%= @article.title %></p>
<h2></h2>
<p><%= @article.body %></p>

<% if @article.image? %>
		<%= image_tag @article.image.url %>
		<% else %>
		<p>画像がありません</p>
<% end %>

<br>

<% if current_user.id == @article.user_id %>
	<%= link_to "編集", edit_article_path(@article.id), class: "btn edit-btn" %>
	<%= link_to "削除", article_path(@article.id), method: :delete, class: "btn destroy-btn", "data-confirm" => "本当に削除しますか？" %>
<% end %>

<h2>コメント</h2>	
<%= form_for [@article, @comment] do |f| %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	
	<%= f.text_area :body, class: "...", :rows => 2 %>
	<br>
	<%= f.label :image %>
	<%= f.file_field :image %>
	<%= f.submit 'コメントする' %>
<% end %>


<% @article.comments.each do |comment| %>
	<p><%= link_to comment.try(:user).name %></p>
	<p><%= comment.body  %></p>
	<% if comment.image? %>
	 	<%= image_tag comment.image %>
	<% end %>
<% end %>

