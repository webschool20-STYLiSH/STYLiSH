<%= link_to "新しいコーディネイト" ,new_article_path, class: "btn" %>
<h1>投稿一覧</h1>
<% @articles.each do |article| %>
	<p>タイトル</p>
	<span>
		<%=link_to article.title, article_path(article.id) %>
	</span>
	<% if article.image? %>
		<%= image_tag article.image.url %>
		<% else %>
		<p>画像がありません</p>
	<% end %>

	<%= render 'articles/tag_list', tag_list: article.interest_list %>

<% end %>

<%= paginate @articles %>