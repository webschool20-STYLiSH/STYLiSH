<h2>プロフィール画像</h2>
<p>
	<% if @user.image? %>
    	<%= image_tag @user.image.url %>
    <% else %>
    	<%= image_tag '画像がありません' %>
    <% end %>
</p>
<h2>プロフィール</h2>
<p><%= @user.profile %></p>
<h2>性別</h2>
<p><%= @user.gender %></p>
<h2>国名</h2>
<p><%= @user.country %></p>

<%= link_to "編集", edit_user_path(@user.id), class: "btn edit-btn" %>


<% @articles.each do |article| %>
  <%= link_to article.title, article_path(article.id) %>
  <%= image_tag article.image.url %>
