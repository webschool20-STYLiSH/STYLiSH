<h2>ユーザー名</h2>
<p><%= @user.name %></p>
<!-- <h2>メールアドレス</h2> -->
<!-- <p><%= @user.email %></p> -->
<h2>プロフィール画像</h2>
<p>
	<% if @user.image? %>
    	<%= image_tag @user.image.url %>
    <% else %>
    	<%= image_tag '画像がありません' %>
    <% end %>
</p>
<h2>プロフィール</h2>
<p><%= @user.profile %></p>
<h2>性別</h2>
<p><%= @user.gender %></p>
<h2>国名</h2>
<p><%= @user.country %></p>

<%= link_to "編集", edit_user_path(@user.id), class: "btn edit-btn" %>
<!-- current_userじゃないときは非表示 -->

<% @articles.each do |article| %>
  <%= article.title %>
  <!--<%= article.image.url %> -->
  <%= article.body %>
<% end %>
<ul>
    <li>
      <%= link_to user_path(@user) do %>
        <div class="text">投稿数</div>
        <div class="num"><%= @user.articles.count %></div>
      <% end %>
    </li>
    <li>
      <%= link_to favorites_user_path(@user) do %>
        <div class="text">いいね一覧</div>
        <div class="num"><%= @user.favorites.count %></div>
      <% end %>     
    </li>
</ul>
<% if @user.favorites.empty? %>
    <div class="list-group-item">
      まだお気に入りされた投稿はありません。
    </div>
<% end %>
<% @user.favorites.map { |f| f.article }.each do |article| %>
    <h4 class="user">
        <span class="user-email">
          <%= link_to article.user.email, user_path(article.user) %>
        </span>
    <span class="user-id"><%= article.user.email %></span>
    </h4>
    <div class="article-body">
        <%= article.body %>
    </div>  
<% end %>