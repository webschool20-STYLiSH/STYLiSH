<%= stylesheet_link_tag  "css/users/favorites", :media => "all" %>

<div class="container">
  <div class="row">
    <div class="user_info">
      <%= render 'users/profile' %>
    </div>

    <% if @user.favorites.empty? %>
      <div class="col-xs-12 list-group-item">
        まだお気に入りされた投稿はありません。
      </div>
    <% else %>
      <div class="col-xs-12 border background_color box_main">
        <div class="text">いいね <%= @user.favorites.count %>件</div>
      </div>
      <% @user.favorites.map { |f| f.article }.each do |article| %>
        <%= render 'articles/article', article: article %>
      <% end %>
    <% end %>
  </div>
</div>